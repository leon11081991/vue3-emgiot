{
  "editor.formatOnSave": true, // 存檔時自動 format
  "editor.tabCompletion": "on", // 啟用自訂程式碼樣版
  "editor.rulers": [100, 120], // 設定一行程式碼長度限制
  "editor.wordWrap": "wordWrapColumn", // 自動摺行
  "editor.wordWrapColumn": 120, // 自動摺行長度
  "editor.detectIndentation": true, // 自動縮排
  "editor.indentSize": "tabSize", // 縮排
  "editor.tabSize": 2, // Tab間隔
  "editor.insertSpaces": true, // Tab為空格
  "editor.formatOnPaste": true, // 貼上時對程式格式化
  "editor.snippetSuggestions": "top", // 若有裝其他的 Snippet，可以將編輯器的權重提高

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // 文件定義的 ESLint 錯誤或規則才自動修復
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // 預設 format 使用 prettier
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features" // 預設 format 使用 typescript
  },
  "[markdown]": {
    "editor.formatOnSave": false, // 禁用 Markdown 文件的自動格式化
    "editor.defaultFormatter": null // Markdown 文件使用 Prettier 作為預設格式化工具
  },
  "vue.autoInsert.dotValue": true, // 使用 ref 自動補全
  "cSpell.words": [], // 新增自定義拼寫
}
